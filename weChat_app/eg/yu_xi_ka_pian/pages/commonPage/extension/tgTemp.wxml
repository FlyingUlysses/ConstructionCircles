<view bindtap="fangShiHide" class="tankuang {{tgCenter.fangShi}}"></view>
<view class="alter1 {{tgCenter.fangShi}}">
    <view class="alterTitle">
        <navigator class="f24 tg_center {{tgCenterBtn}}" url="/pages/extension/pages/extensionCenter/extensionCenter">推广中心</navigator>
        <view class="tg_center_line {{tgCenterBtn}}"></view>
        <view bindtap="fangShiHide" class="alterClose">
            <image src="https://www.haojian.cn/wximg/close1.png"></image>
        </view>
        <view class="f34 txt_center c3 bbe9s">选择推广方式</view>
    </view>
    <view class="p30 bgfa bbe9d box_b flex_start pos">
        <image class="extensionSL_img flex_shrink" mode="scaleToFill" src="{{tgDataDetail.cover.thumb_small_url}}"></image>
        <view class="ml30 f30 c3 clamp3 mb20">{{tgDataDetail.title}}</view>
    </view>
    <view class="bgfff mt20 p30 flex_start box_b">
        <view class="f28 c3">方式一：</view>
        <view class="ml30 flex1">
            <view class="f28 c3">分享推广海报</view>
            <view class="f24 c9 mt20 fs1">点击推广海报查看大图，长按保存转发给好友或朋友圈进行推广</view>
            <view class="mt20 flex_start">
                <image bindtap="seeImg" class="fs_img" src="{{haiBaoList.thumb_medium_url}}"></image>
            </view>
        </view>
    </view>
    <view class="bgfff mt20 p30 flex_start">
        <view class="f28 c3">方式二：</view>
        <view class="ml30 flex1">
            <view class="f28 c3">直接分享给好友</view>
            <button class="fs_btn f26 txt_center" hoverClass="none" openType="share" page="detail">点击分享</button>
        </view>
    </view>
</view>
